<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>2-AC-RestrictAccess</Name>
            </Step>
            <Step>
                <Name>3-KVMO-FetchKVM</Name>
            </Step>
            <Step>
                <Name>1-SA-ArrestTraffic</Name>
            </Step>
            <Step>
                <Name>1-Q-ApplyQuota</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="FetchEmployeeRecord">
            <Description/>
            <Request>
                <Step>
                    <Name>2-VAK-ValidateAPIKey</Name>
                </Step>
                <Step>
                    <Condition>request.verb == "GET"</Condition>
                    <Name>1-RC-EmployeeResponse</Name>
                </Step>
            </Request>
            <Condition>(proxy.pathsuffix MatchesPath "/employee") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="CreateEmployeeRecord">
            <Description/>
            <Request>
                <Step>
                    <Name>2-VAK-ValidateAPIKey</Name>
                </Step>
                <Step>
                    <Name>2-JTP-JSONThreat</Name>
                </Step>
                <Step>
                    <Name>3-EV-ExtractEmployeeId</Name>
                </Step>
            </Request>
            <Condition>(proxy.pathsuffix MatchesPath "/employee") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="MethodNotAllowed">
            <Request>
                <Step>
                    <Name>3-RF-MethodNotAllowed</Name>
                </Step>
            </Request>
            <Condition>(proxy.pathsuffix MatchesPath "/employee") and ((request.verb != "GET") and (request.verb != "POST"))</Condition>
        </Flow>
        <Flow name="ResourceNotFound">
            <Request>
                <Step>
                    <Name>3-RF-ResourceNotFound</Name>
                </Step>
            </Request>
            <Condition>(proxy.pathsuffix == "") or (proxy.pathsuffix MatchesPath "/**")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/mockbackend/apigeetraining/v1</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>